<html>
	<head>

		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">

		<link rel="stylesheet" href="style/main.css">
	</head>

	<body>

			<nav class="navbar navbar-inverse">
			  <div class="container-fluid">
			    <!-- Brand and toggle get grouped for better mobile display -->
			    <div class="navbar-header">
			      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
			        <span class="sr-only">Toggle navigation</span>
			        <span class="icon-bar"></span>
			        <span class="icon-bar"></span>
			        <span class="icon-bar"></span>
			      </button>
			      <a class="navbar-brand" href="#">Holidae Inn</a>
			    </div>

			    <!-- Collect the nav links, forms, and other content for toggling -->
			    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
			      	<ul class="nav navbar-nav navbar-right">
							<% if current_user %>
			      	<li>
			      		<p class='navbar-text'>Signed in as <a href="/" class="navbar-link"><%= current_user.name %></a></p>
			      	</li>
			        <li>
			        	<form method='post' action='/session'>
						  <div class="form-group">
						    <input type='hidden' name='_method' value='delete'>
							<input type="submit" value='Sign out'>
						  </div>
						</form>

			        </li>
			        </ul>
							<% end %>
							<% unless current_user %>

<div class="btn-group" role="group" aria-label="...">
  <button type="button" class="btn btn-default"><a href="/users/new">Sign Up</a></button>
  <button type="button" class="btn btn-default"><a href="/session/new">Sign In</a></button>
</div>

		<% end %>



			    </div><!-- /.navbar-collapse -->
			  </div><!-- /.container-fluid -->
			</nav>

		<%= yield %>
